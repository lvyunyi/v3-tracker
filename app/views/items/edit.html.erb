<%- model_class = Item -%>
<div class="page-header">
  <h1>修改</h1>
</div>
<%= form_for @item, :html => { :class => "form-horizontal item" } do |f| %>

    <% if @item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "内容", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'form-control', :placeholder => '支持markdown语法', :rows => 7 %>
    </div>
    <%= f.error_span(:content) %>
  </div>
  <div class="control-group">
    <%= f.label "负责人", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= f.error_span(:name)%>
  </div>
  <div class="control-group">
    <%= f.label "完成状态", :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :status, :class => 'form-control' %>
    </div>
    <%= f.error_span(:status) %>
  </div>


  <%= f.submit "提交", :class => 'btn btn-primary' %>
  <%= link_to "取消",
            items_path, :class => 'btn btn-default' %>

<% end %>

