<%- model_class = UpdateItem -%>
<div class="page-header">
  <h1>迭代项目</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
      <th>编号</th>
      <th>迭代内容</th>
      <th>来源</th>
      <th>更新时间</th>
      <th>操作项</th>
    </tr>
  </thead>
  <tbody>
    <% @update_items.each do |update_item| %>
      <tr>
        <td><%= link_to update_item.id, update_item_path(update_item) %></td>
        <td><%= update_item.content %></td>
        <td><%= update_item.from %></td>
        <td><%=l update_item.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_update_item_path(update_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      update_item_path(update_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_update_item_path,
            :class => 'btn btn-primary' %>
