<%= form_for @optimize_item, :html => { :class => "form-horizontal optimize_item" } do |f| %>

  <% if @optimize_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@optimize_item.errors.count, "error") %> prohibited this optimize_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @optimize_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "优化内容", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, :class => 'form-control', :rows => 10, :placeholder => "支持markdown语法" %>
    </div>
    <%=f.error_span(:content) %>
  </div>
  <div class="form-group">
    <%= f.label "状态", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label "来源", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :from, :class => 'form-control' %>
    </div>
    <%=f.error_span(:from) %>
  </div>
  <div class="form-group">
    <%= f.label "负责人", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :in_charge, :class => 'form-control' %>
    </div>
    <%=f.error_span(:in_charge) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                optimize_items_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
